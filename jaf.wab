const setupProductFeatures = () => {
    // Ù…Ø¤Ù‚Øª Ù„Ù„Ø¹Ø±ÙˆØ¶
    const discountBadges = document.querySelectorAll('.discount-badge');
    
    const updateTimer = () => {
        const now = new Date();
        const endOfDay = new Date();
        endOfDay.setHours(23, 59, 59, 999);
        
        const diff = endOfDay - now;
        const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((diff % (1000 * 60)) / 1000);
        
        discountBadges.forEach(badge => {
            const originalText = badge.textContent;
            badge.setAttribute('data-original', originalText);
            badge.innerHTML = `${originalText} <br><small>ÙŠÙ†ØªÙ‡ÙŠ Ø®Ù„Ø§Ù„: ${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}</small>`;
        });
    };
    
    // ØªØ­Ø¯ÙŠØ« Ø§Ù„Ù…Ø¤Ù‚Øª ÙƒÙ„ Ø«Ø§Ù†ÙŠØ©
    if (discountBadges.length > 0) {
        updateTimer();
