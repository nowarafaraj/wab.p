// Ø§Ù„Ø¬Ø²Ø¡ 4: ØªØ£Ø«ÙŠØ±Ø§Øª Ø§Ù„ØªÙ…Ø±ÙŠØ± ÙˆØ§Ù„Ø¸Ù‡ÙˆØ±
// ===========================================
const setupScrollAnimations = () => {
    const revealElements = document.querySelectorAll(".section, .product-card, .feature-box, .review-card");
    
    // Ø¥Ø¶Ø§ÙØ© ÙƒØ§Ø¦Ù† Ù…Ø±Ø§Ù‚Ø¨ IntersectionObserver
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add("visible");
            }
        });
    }, {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    });
    
    // Ù…Ø±Ø§Ù‚Ø¨Ø© Ø¬Ù…ÙŠØ¹ Ø§Ù„Ø¹Ù†Ø§ØµØ±
    revealElements.forEach(el => {
        observer.observe(el);
    });
    
    // ØªØ£Ø«ÙŠØ± Ø¹Ù„Ù‰ Ø§Ù„Ù‡ÙŠØ¯Ø± Ø¹Ù†Ø¯ Ø§Ù„ØªÙ…Ø±ÙŠØ±
    const header = document.querySelector('header');
    window.addEventListener('scroll', () => {
        if (window.scrollY > 100) {
            header.style.boxShadow = '0 4px 20px rgba(0, 0, 0, 0.1)';
            header.style.padding = '0.5rem 5%';
        } else {
            header.style.boxShadow = 'var(--shadow)';
            header.style.padding = '1rem 5%';
        }
    });
};

